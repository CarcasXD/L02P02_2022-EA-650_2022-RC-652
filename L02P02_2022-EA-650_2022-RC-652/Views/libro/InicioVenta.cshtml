@{
    Layout = null; // Quita o comenta esta línea si quieres usar un _Layout.cshtml
    ViewBag.Title = "Venta de Libros";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <style>
        /* Estilos mínimos para asemejar la estructura de la imagen */

        body {
            margin: 0;
            font-family: Arial, sans-serif;
        }

        /* Encabezado (logo y barra superior) */
        .header {
            background-color: #3c3f43; /* color oscuro de fondo */
            height: 100px;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .header img {
            /* Espacio reservado para el logo */
            width: 80px; 
            height: 80px; 
            /* Pon el src correcto en tu proyecto, por ejemplo: src="~/Content/logo.png" */
        }

        /* Título principal y subtítulo */
        .title-section {
            text-align: center;
            margin: 20px;
        }
        .title-section h1 {
            margin: 0;
            font-size: 2em;
        }
        .title-section p {
            margin: 5px 0 0 0;
            font-size: 1em;
            color: #555;
        }

        /* Contenedor general para la sección de libros y total */
        .content-wrapper {
            display: flex;
            justify-content: space-between;
            margin: 0 5%;
        }

        /* Sección izquierda (lista de libros) */
        .books-section {
            width: 60%;
        }
        .books-section h2 {
            margin-bottom: 10px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
        }
        table th,
        table td {
            border: 1px solid #ccc;
            padding: 8px;
            text-align: left;
        }
        table th {
            background-color: #f8f8f8;
        }

        /* Sección derecha (total y botón) */
        .total-section {
            width: 35%;
            text-align: center;
            border: 1px solid #ccc;
            border-radius: 5px;
            height: fit-content;
            padding: 10px;
            margin-top: 30px;
        }
        .total-section h3 {
            margin: 0 0 10px 0;
        }
        .total-section .price {
            font-size: 2em;
            margin: 10px 0;
        }
        .btn-completar {
            background-color: #28a745; 
            color: white;
            border: none;
            padding: 10px 20px;
            cursor: pointer;
            border-radius: 3px;
        }

        /* Footer */
        footer {
            text-align: center;
            margin: 20px 0;
            color: #555;
        }
    </style>
</head>
<body>

    <!-- Encabezado con el logo -->
    <div class="header">
        <img src="#" alt="Logo" />
    </div>

    <!-- Título y subtítulo -->
    <div class="title-section">
        <h1>Venta de Libros</h1>
        <p>Seleccione los libros y posterior ingrese sus datos</p>
    </div>

    <!-- Contenido principal: Libros (izquierda) y Total (derecha) -->
    <div class="content-wrapper">

        <!-- Sección Libros -->
        <div class="books-section">
            <h2>Libros</h2>
            <table>
                <thead>
                    <tr>
                        <th>Nombre del Libro</th>
                        <th>Precio</th>
                        <th>Acción</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Nombre del Libro 1<br /><small>Autor</small></td>
                        <td>$12</td>
                        <td>
                            <!-- Ejemplo de HTML Helper para un link de acción -->
                            @Html.ActionLink("+ Agregar", "Agregar", "Libros", new { id = 1 }, new { @class = "btn" })
                        </td>
                    </tr>
                    <tr>
                        <td>Nombre del Libro 2<br /><small>Autor</small></td>
                        <td>$8</td>
                        <td>
                            @Html.ActionLink("+ Agregar", "Agregar", "Libros", new { id = 2 }, new { @class = "btn" })
                        </td>
                    </tr>
                    <tr>
                        <td>Nombre del Libro 3<br /><small>Autor</small></td>
                        <td>$15</td>
                        <td>
                            @Html.ActionLink("+ Agregar", "Agregar", "Libros", new { id = 3 }, new { @class = "btn" })
                        </td>
                    </tr>
                    <tr>
                        <td>Nombre del Libro 4<br /><small>Autor</small></td>
                        <td>$20</td>
                        <td>
                            @Html.ActionLink("+ Agregar", "Agregar", "Libros", new { id = 4 }, new { @class = "btn" })
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

        <!-- Sección Total -->
        <div class="total-section">
            <h3>Total Libros</h3>
            <div class="price">$25</div>
            <button class="btn-completar">Completar</button>
        </div>
    </div>

    <!-- Footer con datos de alumnos -->
    <footer>
        <p>YYYY-DD-MM - NOMBRE DEL ALUMNO UNO</p>
        <p>YYYY-DD-MM - NOMBRE DEL ALUMNO DOS</p>
    </footer>

</body>
</html>
