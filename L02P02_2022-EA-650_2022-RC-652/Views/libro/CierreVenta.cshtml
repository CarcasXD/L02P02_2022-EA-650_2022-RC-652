@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Cierre de Venta</title>
    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
        }

        header {
            background-color: #1a1a1a;
            color: #fff;
            text-align: center;
            padding: 20px 0;
        }

        .logo {
            height: 60px;
            display: block;
            margin: 0 auto 10px auto;
        }

        h1 {
            margin: 0;
            font-size: 24px;
        }

        .subtitle {
            margin: 5px 0 0 0;
            font-size: 14px;
            color: #ccc;
        }

        .container {
            width: 90%;
            max-width: 1200px;
            margin: 30px auto;
            display: flex;
            gap: 20px;
        }

        .left-section {
            flex: 2;
            background-color: #fff;
            padding: 20px;
            border-radius: 5px;
        }

        .right-section {
            flex: 1;
            background-color: #fff;
            padding: 20px;
            border-radius: 5px;
            text-align: center;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .section-title {
            font-size: 18px;
            margin-bottom: 15px;
        }

        .client-info {
            margin-bottom: 20px;
        }

            .client-info p {
                margin: 5px 0;
            }

        .table-container {
            margin-bottom: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            background-color: #fff;
        }

        table, th, td {
            border: 1px solid #ddd;
        }

        th, td {
            padding: 10px;
            text-align: center;
        }

        .total-label {
            font-weight: bold;
            text-align: right;
            margin-top: 10px;
        }

        .btn {
            padding: 10px 20px;
            background-color: #55b776;
            color: #fff;
            text-decoration: none;
            border-radius: 4px;
            border: none;
            cursor: pointer;
        }

            .btn:hover {
                background-color: #4aa066;
            }

        .btn-primary {
            background-color: #007bff;
        }

            .btn-primary:hover {
                background-color: #0069d9;
            }

        footer {
            background-color: #1a1a1a;
            color: #fff;
            text-align: center;
            padding: 10px 0;
            margin-top: 30px;
        }

            footer p {
                margin: 0;
                font-size: 14px;
            }
    </style>
</head>
<body>
    <header>
        <img src="~/Img/logoUNICAES.png" alt="Logo" class="logo" />
        <h1>Venta de Libros</h1>
        <p class="subtitle">Seleccione los libros y posteriormente ingrese sus datos</p>
    </header>
    <div class="container">
        <div class="left-section">
            <div class="section-title">Proceso de venta</div>
            <h4>Datos del Cliente</h4>
            @if (ViewBag.Cliente != null)
            {
                var cliente = ViewBag.Cliente;
                <div class="client-info">
                    <p><strong>Nombre:</strong> @cliente.nombre</p>
                    <p><strong>Apellido:</strong> @cliente.apellido</p>
                    <p><strong>Email:</strong> @cliente.email</p>
                    <p><strong>Dirección:</strong> @cliente.direccion</p>
                </div>
            }
        </div>
        <div class="right-section">
            <div>
                <div class="section-title">Carrito</div>
                <div class="table-container">
                    <table>
                        <thead>
                            <tr>
                                <th>Nombre del Libro</th>
                                <th>Precio</th>
                                <th>Cantidad</th>
                                <th>Subtotal</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (ViewBag.Detalles != null)
                            {
                                foreach (var item in (IEnumerable<dynamic>)ViewBag.Detalles)
                                {
                                    <tr>
                                        <td>@item.nombre</td>
                                        <td>@item.precio.ToString("C")</td>
                                        <td>@item.Cantidad</td>
                                        <td>@item.Subtotal.ToString("C")</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
                <div class="total-label">
                    Total (USD): @ViewBag.Total.ToString("C")
                </div>
            </div>
            <div>
                @using (Html.BeginForm("CerrarVenta", "libro", FormMethod.Post))
                {
                    <button type="submit" class="btn-primary btn" style="margin-top: 20px;">Cerrar venta</button>
                }
            </div>
        </div>
    </div>
    <footer>
        <p>2022-EA-650 - EDUARDO ALEXANDER ECHEVERRIA ALDANA | 2022-RC-652 - CARLOS ARISTIDES RIVAS CALDERON</p>
    </footer>
</body>
</html>
